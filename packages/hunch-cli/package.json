{
  "name": "hunch-cli",
  "version": "0.1.0",
  "description": "CLI for Hunch telemetry capture and MCP",
  "license": "MIT",
  "type": "module",
  "bin": {
    "hunch": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "node --watch dist/cli.js",
    "test": "pnpm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "hunch": "workspace:*",
    "hunch-core": "workspace:*",
    "hunch-mcp": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "25.2.2"
  }
}
