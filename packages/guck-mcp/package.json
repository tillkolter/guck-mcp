{
  "name": "guck-mcp",
  "version": "0.1.0",
  "description": "MCP server for Guck telemetry",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "scripts",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "node scripts/ensure-deps.mjs && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "prepare": "pnpm run build",
    "test": "pnpm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "guck-core": "github:tillkolter/guck-mcp#path:packages/guck-core"
  },
  "devDependencies": {
    "@types/node": "25.2.2"
  }
}
