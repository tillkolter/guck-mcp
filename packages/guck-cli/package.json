{
  "name": "guck-cli",
  "version": "0.1.0",
  "description": "CLI for Guck telemetry capture and MCP",
  "license": "MIT",
  "type": "module",
  "bin": {
    "guck": "dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "node scripts/ensure-deps.mjs && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "node --watch dist/cli.js",
    "prepare": "pnpm run build",
    "test": "pnpm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "guck": "github:tillkolter/guck-mcp#path:packages/guck-js",
    "guck-core": "github:tillkolter/guck-mcp#path:packages/guck-core",
    "guck-mcp": "github:tillkolter/guck-mcp#path:packages/guck-mcp"
  },
  "devDependencies": {
    "@types/node": "25.2.2"
  }
}
